def make_pizza(size, *toppings):
    """Summarize the pizza we ordered"""
    print(f'\nMaking a {size}- pizza with these toppings')
    for topping in toppings:
        print(f' - {topping}')
        
## NExt needs to be a seperate file

import pizza

pizza.make_pizza(16, 'pepperoni')
pizza.make_pizza(12, 'mushrooms', 'green peppers', 'extra cheese')
