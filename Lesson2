weight = int(input("Weight: "))
#^ This is an int because user is entering their weight. Which is a number.
unit = input('(L)bs or (K)g: ')
if unit.upper() == "L":
    converted = weight * 0.45
    print(f"You are {converted}")
else:
    converted = weight / 0.45
    print(f"You are {converted}")

