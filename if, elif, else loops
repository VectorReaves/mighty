if age >= 18:
    print('You are old enough to vote.')
else:
    print("Sorry, you aren't old enough to vote.")

age = 18

if age < 4:
    print("Your admission cost is 0$")
elif age <= 18:
    print("Your admission cost is 5$.")
else:
    print("Your admission cost is 10$")

age2 = 78

if age2 < 4:
    price = 0
elif age2 < 18:
    price = 5
elif age2 > 65:
    price = 2
else:
    price = 15
print(f'\nYour admission price is {price}$.')

available_toppings = ['mushrooms', 'olives', 'cheese', 'pepperoni', 'anchovies']
requested_toppings = ['mushrooms', 'cheese', 'fries']

for requested_topping in requested_toppings:
    if requested_topping in available_toppings:
        print(f'Adding {requested_topping}.')
else:
    print("We don't serve that.")
print("\nFinished making your pizza!")

alien_color = ['green', 'blue']
if 'green' in alien_color:
    print("You just earned 5 points!")
if 'blue' in alien_color:
    print("You just earned 1 point!")
if 'red' in alien_color:
    print("You just earned 3 points!")


alien_color2 = ['red', 'green', 'yellow']
if 'red' in alien_color2:
    print("You just earned 15 points!")
elif 'green' in alien_color:
    print('You just earned 5 points!')
elif 'yellow' in alien_color:
    print("You just earned 10 points!")
else:
    print('You lost!')

