    print(f"You really like {favorite_fruits[0]}s!")
if 'banana' in favorite_fruits:
    print(f"You really like {favorite_fruits[2]}s!")

usernames = ['admin', 'jaden', 'billy', 'joe', 'zoey']
admin_names = ['admin']
for username in usernames:
    if username in admin_names:
        print(f"\nWelcome back, {admin_names[0].title()}.")
else:
    print(f"Hello {usernames[2].title()}.")

current_users = ['vector', 'reeves', 'poe', 'yellow', 'monkey']
new_users = input("Please enter your username: ")
users_name_from_input = new_users
for current_user in current_users:
    if current_user in users_name_from_input:
        print("Sorry, that name is taken. You need to create an original username.")
    if users_name_from_input:
        print(f'Nice to meet you, {users_name_from_input}.')
